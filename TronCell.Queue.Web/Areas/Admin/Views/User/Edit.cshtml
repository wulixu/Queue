@model TronCell.Queue.Web.Models.ApplicationUser
@{
    ViewBag.Title = "修改用户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>修改用户</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.CreatedTime)
        @Html.HiddenFor(model => model.SecurityStamp)
        <div class="form-group">
           
            <div class="control-label col-md-2">真实姓名</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrueName, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(model => model.TrueName)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">手机号码</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                身份证号码
            </div>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.IDCard, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDCard)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                公司名称
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompanyName)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                车牌号码
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CarNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CarNum)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                密码
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PasswordHash , new { htmlAttributes =  new {  @class = "form-control" }})
                <input type="hidden" id="passwordValue" name="passwordValue" value="@Model.PasswordHash" />
                @Html.ValidationMessageFor(model => model.PasswordHash)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="确认修改" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


